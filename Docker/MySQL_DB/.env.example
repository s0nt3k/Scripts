#   MUST NOT be committed or shared.
# ================================================================

# ==========================
# MySQL settings
# ==========================

# STRONG root password (required)
MYSQL_ROOT_PASSWORD=ChangeThisRootPassword!

# Optional app database and user
MYSQL_DATABASE=appdb
MYSQL_USER=appuser
MYSQL_PASSWORD=ChangeThisAppPassword!

# MySQL TCP port (default 3306)
# If you change this, clients must connect to that port.
MYSQL_TCP_PORT=3306

# ==========================
# phpMyAdmin settings
# ==========================

# Host port to reach phpMyAdmin in browser (maps to container port 80)
# Visit http://localhost:${PHPMYADMIN_PORT}
PHPMYADMIN_PORT=8080
